    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./output",
    "baseUrl": "." 
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}